@page
@model UdemyRazor.Pages.Categories.IndexModel

<div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">
                    Category List
                </h2>
            </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                Create new category
            </a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Category name
        </th>       
        <th>
            Display order
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div>
                            <a asp-page="/categories/edit" asp-route-Id="@obj.Id" class="btn btn-primary">Edit</a>
                            <a asp-page="/categories/delete" asp-route-Id="@obj.Id" class="btn btn-primary">Delete</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
