@model List<Company>
<div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-body">
                    Company List
                </h2>
            </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                Create new company
            </a>
        </div>
    </div>
    <table id="tblDataCompany" class="table table-bordered table-striped" width="100%">
    <thead>
    <tr>
                <th>
                    Name
                </th>
                <th>
                    Street address
                </th>
                <th>
                    City
                </th>
                <th>
                    State
                </th>
                <th>
                    Postal code
                </th>
                <th>
                    Phone number
                </th>
                <th>
                    Actions
                </th>
    </tr>
    </thead>
</table>
</div>

    @section Scripts {
        <script src="~/js/company.js"></script>  
    }